# For the CA policy
[ policy_match ]
countryName = NP
stateOrProvinceName = Bagmati
organizationName = Yaman Lab
organizationalUnitName = Security
commonName = lab.local
emailAddress = lab@lab.local

[ req ]
default_bits = 4096
default_keyfile = TestCert.pem
default_md = sha256
distinguished_name = req_dn
req_extensions = v3_req
x509_extensions = v3_ca

[ v3_req ]
subjectKeyIdentifier  = hash
basicConstraints = CA:FALSE
keyUsage = critical, digitalSignature, keyEncipherment
nsComment = "OpenSSL Generated Certificate"
extendedKeyUsage  = serverAuth, clientAuth
subjectAltName = @alt_names

[alt_names]
IP.1 = {{ ansible_host }}
IP.2 = 127.0.0.1
DNS.1 = localhost
DNS.2 = lab.local
DNS.3 = *.lab.local

[ req_dn ]
countryName = NP
countryName_default =NP
countryName_min = 2
countryName_max = 2

stateOrProvinceName = Bagmati
stateOrProvinceName_default = Bagmati
stateOrProvinceName_max = 64

localityName = Kathmandu
localityName_default = Kathmandu
localityName_max = 64

organizationName = Yaman Lab
organizationName_default = Yaman Lab
organizationName_max = 64

organizationalUnitName = Security
organizationalUnitName_default = Security
organizationalUnitName_max = 64

commonName = Yaman Singh Rana
commonName_max = 64

[ v3_ca ]
# Extensions for a typical CA
subjectKeyIdentifier=hash
basicConstraints = critical,CA:true
authorityKeyIdentifier=keyid:always,issuer:always